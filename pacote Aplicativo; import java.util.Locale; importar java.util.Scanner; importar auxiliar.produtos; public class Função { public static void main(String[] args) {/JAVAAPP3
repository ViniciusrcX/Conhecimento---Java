package Aplicativo;
import java.util.Locale;
import java.util.Scanner;

import auxiliar.produtos;

public class Funcion {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
   Scanner std = new Scanner(System.in);
   produtos po = new produtos();
 
   Locale.setDefault(Locale.US);
   System.out.printf("nome :   ");
   po.name = std.toString();
   
   System.out.printf("salario:  ");
   po.Grossalary = std.nextDouble();
   
   
   System.out.printf("imposto");
   po.Tax = std.nextDouble();
   
   System.out.printf (po.names());
   System.out.println(po.salario());
   
   System.out.println("quanto quer aumentar : ");
   po.incremento = std.nextDouble();
   
   System.out.println(po.names());
   System.out.println(po.salario2());
   std.close();
	}

}
ENTIDADES 
package auxiliar;



public class produtos {
	
public String name ;
public double Grossalary;
public double Tax;
public double incremento;

public String names(){
    return name;
	}
public double salario(){
	return Grossalary - Tax;
	
}
public double taxa(){
	return Tax;
	
}
public double salario2(){
	return Grossalary % incremento;
	
}


}
